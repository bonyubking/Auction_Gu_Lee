<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- 알림 설정 제목: 중앙 정렬 -->
    <TextView
        android:id="@+id/tvNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 설정"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- 채팅 알림 스위치 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvChatNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채팅 알림"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_gravity="start" />

        <Switch
            android:id="@+id/switchChatNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end" />
    </LinearLayout>

    <!-- 나의 거래 알림 스위치 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvTransactionNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 거래 알림"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_gravity="start" />

        <Switch
            android:id="@+id/switchTransactionNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end" />
    </LinearLayout>

    <!-- ScrollView로 감싸서 스크롤 가능하도록 설정 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 키워드 설정 제목 -->
            <TextView
                android:id="@+id/tvKeyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="키워드 설정"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- 키워드 입력 필드와 등록 버튼을 한 줄에 배치 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/etKeyword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="알림 받을 키워드 입력"
                    android:textSize="16sp"
                    android:inputType="text" />

                <Button
                    android:id="@+id/btnAddKeyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="등록"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 키워드 목록이 들어갈 레이아웃 -->
            <LinearLayout
                android:id="@+id/keywordContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
