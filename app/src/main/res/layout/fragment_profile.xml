<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="프로필"
        android:background="#BDD778"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8A4F4F"
            android:backgroundTint="#FFFFFF"
            android:orientation="vertical"
            android:paddingVertical="8dp"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/tv_user_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 거래"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="10dp" />

            <TextView
                android:id="@+id/btn_wishlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  관심 목록"
                android:textSize="16sp"
                android:paddingVertical="10dp"/>

            <TextView
                android:id="@+id/btn_recently_viewed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  최근 본 내역"
                android:textSize="16sp"
                android:paddingVertical="10dp"/>

            <TextView
                android:id="@+id/btn_sales_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  판매 내역"
                android:textSize="16sp"
                android:paddingVertical="10dp"/>

            <TextView
                android:id="@+id/btn_bid_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  입찰 내역"
                android:textSize="16sp"
                android:paddingVertical="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="광고"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/btn_business_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  내 비지니스 광고하기"
                android:textSize="16sp"
                android:paddingVertical="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설정"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/btn_notification_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  알림 설정"
                android:textSize="16sp"
                android:paddingVertical="10dp"/>


            <TextView
                android:id="@+id/btn_user_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  내 정보 변경"
                android:textSize="16sp"
                android:paddingVertical="10dp"/>


            <TextView
                android:id="@+id/btn_other_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  기타 설정"
                android:textSize="16sp"
                android:paddingVertical="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  기타"
                android:textSize="16sp"
                android:paddingVertical="10dp"/>

            <TextView
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  최신 버전 업데이트"
                android:textSize="16sp"
                android:paddingVertical="10dp"/>

            <TextView
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  로그아웃"
                android:textSize="16sp"
                android:textColor="#FF0000"
                android:paddingVertical="10dp"/> <!-- 텍스트 색깔을 빨간색으로 설정 (원하는 색으로 변경 가능) -->


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
