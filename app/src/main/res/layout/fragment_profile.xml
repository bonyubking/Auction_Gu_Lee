<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 나의 거래 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 거래"
                android:textSize="18sp"
                android:padding="8dp" />

            <!-- 관심 목록 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심 목록"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/btn_wishlist"/>

            <!-- 최근 본 내역 -->
            <TextView
                android:id="@+id/btn_recent_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최근 본 내역"
                android:textSize="16sp"
                android:padding="8dp" />

            <!-- 판매 내역 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="판매 내역"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/btn_sales_history"/>

            <!-- 판매 중 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="판매 중"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:padding="8dp"
                android:id="@+id/btn_current_sales"/>

            <!-- 판매 완료 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="판매 완료"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:padding="8dp"
                android:id="@+id/btn_completed_sales"/>

            <!-- 입찰 내역 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입찰 내역"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/btn_bid_history"/>

            <!-- 점선 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/dashed_line"
                android:color="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="광고"
                android:textSize="16sp"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 비지니스 광고하기"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/btn_business_ad"/>


            <!-- 점선 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/dashed_line"
                android:color="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설정"
                android:textSize="16sp"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림 설정"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/btn_notification_settings"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림 수신 설정"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/btn_receive_notifications"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림음 설정"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/btn_notifications_sound"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채팅"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/btn_chat"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="키워드 알림"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/btn_keyword_notifications"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="키워드 등록"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/btn_register_keyword"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 설정"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/btn_user_setting"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계정 정보 관리"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/btn_user_information"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="언어 설정"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/btn_language_setting"/>


            <!-- 점선 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/dashed_line"
                android:color="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타"
                android:textSize="16sp"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="캐시 데이터 삭제하기"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/btn_delete_data"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최신 버전 업데이트"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/btn_update"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타 설정"
                android:textSize="16sp"
                android:padding="8dp"
                android:id="@+id/btn_other_settings"/>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
