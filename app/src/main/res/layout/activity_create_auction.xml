<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#000000">

        <TextView
            android:id="@+id/CreatingAuction"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FF9800"
            android:gravity="center"
            android:text="경매 생성"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/CreatingAuction">

            <TextView
                android:id="@+id/item1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="품목" />

            <EditText
                android:id="@+id/editText_item"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/item">

            <TextView
                android:id="@+id/quantity1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="수량" />

            <EditText
                android:id="@+id/editText_quantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="end"
                android:inputType="number" />

            <CheckBox
                android:id="@+id/EA"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="개" />

            <CheckBox
                android:id="@+id/box"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="박스" />

            <CheckBox
                android:id="@+id/kg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="kg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/quantity">

            <TextView
                android:id="@+id/detail1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="상세 설명" />

            <EditText
                android:id="@+id/editText_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:gravity="top|start"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:minLines="3"
                android:padding="8dp"
                android:scrollbars="vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/startingprice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:orientation="horizontal"

            app:layout_constraintTop_toBottomOf="@id/detail">

            <TextView
                android:id="@+id/startingprice1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="시작 가격" />

            <EditText
                android:id="@+id/editText_startingprice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="end"
                android:hint="100 이상을 입력해 주세요"
                android:inputType="number"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/koreapricewon"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="원"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/remaining_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/startingprice">

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="남은 시간이 표시됩니다" />

            <Button
                android:id="@+id/dateTimeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9800"
                android:text="날짜 및 시간 선택"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/remaining_time">

            <ImageView
                android:id="@+id/imageView_preview"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:contentDescription="Image Preview"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_attach_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9800"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:text="사진 첨부" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/item_photo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">

            <Button
                android:id="@+id/button_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9800"
                android:text="완료" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>



