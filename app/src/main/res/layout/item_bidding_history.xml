<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- 상품 이미지 -->
    <ImageView
        android:id="@+id/imageView_photo"
        android:layout_width="92dp"
        android:layout_height="91dp"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <!-- 상품 정보 레이아웃 -->
    <LinearLayout
        android:layout_width="134dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 상품명 -->
        <TextView
            android:id="@+id/textView_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Item Name"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="대게" />

        <!-- 시작 가격 -->
        <TextView
            android:id="@+id/textView_startingPrice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Starting Price"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="$100" />

        <!-- 남은 시간 -->
        <TextView
            android:id="@+id/textView_remainingTime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="남은시간" />

    </LinearLayout>

    <!-- 입찰 정보 레이아웃 -->
    <LinearLayout
        android:layout_width="134dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 입찰 상태 (높이와 너비 조정) -->
        <TextView
            android:id="@+id/textView_bid_status"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="진행 중"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="진행 중" />

        <!-- 현재 최고가 (높이와 너비 조정) -->
        <TextView
            android:id="@+id/textView_highestPrice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Highest Price"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="$200" />

        <!-- 재입찰 버튼 (높이와 너비 조정) -->
        <Button
            android:id="@+id/btn_rebid"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/button_rounded"
            android:backgroundTint="#FF5722"
            android:gravity="center"
            android:padding="4dp"
            android:text="재입찰"
            android:textColor="#FFFFFF"
            android:textColorLink="#FF5722"
            android:textSize="12sp"
            android:theme="@style/CustomButtonTheme"
            tools:text="재입찰" />
    </LinearLayout>



</LinearLayout>
