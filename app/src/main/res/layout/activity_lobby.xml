<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginwallpaperblackversion"
    android:gravity="center">

    <!-- 아이디 입력 -->

    <!-- 비밀번호 입력 -->

    <!-- 로그인 버튼 -->

    <!-- 회원가입 버튼입니다 -->

    <EditText
        android:id="@+id/et_username"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="51dp"
        android:alpha="1"
        android:backgroundTint="#DCDCDC"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789@."
        android:gravity="center"
        android:inputType="text"
        android:textColor="#DCDCDC"
        android:textColorHighlight="#DCDCDC"
        android:textColorLink="#DCDCDC"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="78dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="273dp"
        android:gravity="center"
        android:text="이메일"
        android:textColor="#DCDCDC"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="78dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="273dp"
        android:gravity="center"
        android:text="비밀번호"
        android:textColor="#DCDCDC"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="51dp"
        android:alpha="1"
        android:backgroundTint="#DCDCDC"
        android:gravity="center"
        android:inputType="textPassword"
        android:textColor="#DCDCDC"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="334dp"
        android:layout_marginEnd="221dp"
        android:backgroundTint="#D76645"
        android:text="로그인"
        android:textColorLink="#D56F4E"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="334dp"
        android:layout_marginEnd="51dp"
        android:backgroundTint="#D76645"
        android:text="회원가입"
        android:textColorLink="#782D85"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <CheckBox
        android:id="@+id/checkbox_auto_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="141dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="11dp"
        android:buttonTint="#F44336"
        android:text="자동 로그인"
        android:textColor="#DCDCDC"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="105dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:src="@drawable/button_kakao_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="499dp"
        android:layout_marginEnd="110dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:src="@drawable/button_naver_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="184dp"
        android:layout_height="50dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="575dp"
        android:layout_marginEnd="105dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:src="@drawable/button_google_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

