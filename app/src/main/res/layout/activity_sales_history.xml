<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

        <TextView
            android:id="@+id/sales_history_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:text="판매 내역"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="판매 내역" />

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/sales_history_title"
            app:layout_constraintEnd_toEndOf="@id/sales_history_title"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="검색"
            android:scaleType="center"
            android:src="@drawable/baseline_search_24" />

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30dp"
            android:hint="검색어를 입력하세요"
            android:layout_marginEnd="50dp" />

        <ImageButton
            android:id="@+id/btn_close_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="닫기"
            android:scaleType="center"
            android:src="@drawable/baseline_cancel_24" />

    <TextView
        android:id="@+id/no_results_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="검색 결과가 없습니다."
        android:textColor="#808080"
        android:textSize="18sp"
        android:visibility="gone" />

    <!-- 판매 내역 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sales_history_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_sales_history" />

</androidx.constraintlayout.widget.ConstraintLayout>
