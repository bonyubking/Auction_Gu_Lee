<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

        <!-- Scrollable content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            android:paddingStart="16dp"
                            app:layout_constraintBottom_toTopOf="@id/item_photo"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="Username"
                            android:textSize="14dp"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/remaining_time"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            android:gravity="center"
                            android:text="Remaining Time"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/favoritesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:gravity="center"
                            app:layout_constraintEnd_toStartOf="@+id/btn_add_to_wishlist"
                            android:text="찜0"
                            android:textSize="14sp"/>

                        <ImageButton
                            android:id="@+id/btn_add_to_wishlist"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:scaleType="center"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Add to Wishlist"
                            android:padding="8dp"
                            app:srcCompat="@drawable/baseline_star_24" />

                        <LinearLayout
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="50dp">

                                <ImageView
                                    android:id="@+id/item_photo"
                                    android:layout_width="200dp"
                                    android:layout_height="300dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:scaleType="centerInside"/>

                                <LinearLayout
                                    android:id="@+id/price_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    app:layout_constraintStart_toEndOf="@id/item_photo"
                                    app:layout_constraintTop_toTopOf="parent">

                                        <TextView
                                            android:id="@+id/starting_price"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:text="Starting Price"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:gravity="center"/>

                                        <!-- Highest Price -->
                                        <TextView
                                            android:id="@+id/highest_price"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:text="Highest Price"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:gravity="center"/>

                                        <TextView
                                            android:id="@+id/bidUnit"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:text="단위 : placebid"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            android:textStyle="italic"
                                            android:gravity="center"/>

                                </LinearLayout>
                        </LinearLayout>

                        <!-- Auction Item Photo -->


                        <LinearLayout
                            android:id="@+id/item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/description"
                            android:orientation="vertical"
                            android:paddingHorizontal="30dp">

                                <!-- Item Name -->
                                <TextView
                                    android:id="@+id/item_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/item_photo"
                                    android:layout_marginTop="10dp"
                                    android:text="Item"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="#000000"/>

                                <!-- 품목 갯수 TextView 추가 -->
                                <TextView
                                    android:id="@+id/itemQuantity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="개수"
                                    android:textSize="14sp"
                                    android:textColor="#808080"
                                    app:layout_constraintStart_toStartOf="@id/item"
                                    app:layout_constraintTop_toBottomOf="@id/item_name"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="10dp"/>
                        </LinearLayout>


                        <TextView
                            android:id="@+id/item_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, Item Detail, "
                            android:textSize="14sp"
                            app:layout_constraintTop_toBottomOf="@id/item"
                            app:layout_constraintStart_toStartOf="parent"
                            android:paddingStart="20dp"
                            android:paddingEnd="80dp"
                            android:paddingVertical="20dp"/>

                        <ImageButton
                            android:id="@+id/btn_message1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/baseline_message_24"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@id/item_detail"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp"/>

                        <ImageButton
                            android:id="@+id/btn_message2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/baseline_message_24"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@id/btn_message1"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp"/>

                        <ImageButton
                            android:id="@+id/btn_message3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/baseline_message_24"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@id/btn_message2"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp"/>

                        <TextView
                            android:id="@+id/highest_bidder1"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="입찰자 1순위"
                            android:gravity="center"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@id/item_detail"
                            app:layout_constraintStart_toEndOf="@id/btn_message1"
                            android:layout_marginStart="16dp"
                            android:paddingHorizontal="16dp"/>

                        <TextView
                            android:id="@+id/highest_bidder2"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="입찰자 2순위"
                            android:gravity="center"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@id/highest_bidder1"
                            app:layout_constraintStart_toEndOf="@id/btn_message2"
                            android:layout_marginStart="16dp"
                            android:paddingHorizontal="16dp"/>

                        <TextView
                            android:id="@+id/highest_bidder3"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="입찰자 2순위"
                            android:gravity="center"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@id/highest_bidder2"
                            app:layout_constraintStart_toEndOf="@id/btn_message3"
                            android:layout_marginStart="16dp"
                            android:paddingHorizontal="16dp"/>

                        <TextView
                            android:id="@+id/price_bidder1"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="1순위 가격"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@id/item_detail"
                            app:layout_constraintStart_toEndOf="@id/highest_bidder1"
                            android:gravity="center"
                            android:layout_marginStart="16dp"
                            android:paddingHorizontal="16dp"/>

                        <TextView
                            android:id="@+id/price_bidder2"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="1순위 가격"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@id/price_bidder1"
                            app:layout_constraintStart_toEndOf="@id/highest_bidder2"
                            android:gravity="center"
                            android:layout_marginStart="16dp"
                            android:paddingHorizontal="16dp"/>

                        <TextView
                            android:id="@+id/price_bidder3"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="1순위 가격"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@id/price_bidder2"
                            app:layout_constraintStart_toEndOf="@id/highest_bidder3"
                            android:gravity="center"
                            android:layout_marginStart="16dp"
                            android:paddingHorizontal="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <!-- Floating Action Buttons -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_bid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:contentDescription="Bid Button"
            app:srcCompat="@drawable/icon_bid"
            app:layout_constraintBottom_toTopOf="@id/fab_chat"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#86e16d"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:contentDescription="Chat Button"
            app:srcCompat="@drawable/icon_chat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#86e16d"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:contentDescription="Delete Button"
            app:srcCompat="@drawable/baseline_delete_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#FF0000"
            android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>